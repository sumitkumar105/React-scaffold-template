{
  "name": "create-react-scaffold-configurator",
  "version": "1.0.0",
  "description": "CLI tool to scaffold modern React projects with feature-based architecture, TypeScript, and Vite",
  "type": "module",
  "main": "./dist/lib.js",
  "module": "./dist/lib.js",
  "types": "./dist/lib.d.ts",
  "bin": {
    "create-react-scaffold": "./dist/index.js"
  },
  "exports": {
    ".": {
      "import": "./dist/lib.js",
      "types": "./dist/lib.d.ts"
    },
    "./cli": {
      "import": "./dist/index.js"
    }
  },
  "files": [
    "dist",
    "template",
    "README.md"
  ],
  "scripts": {
    "dev": "tsx src/index.ts",
    "build": "tsc && npm run copy:template",
    "copy:template": "node -e \"const fs=require('fs-extra');fs.copySync('../template','./template',{overwrite:true});console.log('Template copied to configurator/template')\"",
    "start": "node dist/index.js",
    "typecheck": "tsc --noEmit",
    "prepublishOnly": "npm run build",
    "test:local": "npm link && create-react-scaffold test-project --skip-install && rm -rf test-project && npm unlink -g create-react-scaffold",
    "clean": "node -e \"const fs=require('fs-extra');fs.removeSync('./dist');fs.removeSync('./template');console.log('Cleaned dist and template')\""
  },
  "keywords": [
    "react",
    "scaffold",
    "cli",
    "tailwind",
    "redux",
    "react-query",
    "vite",
    "typescript",
    "template",
    "create-react-app",
    "generator",
    "boilerplate",
    "starter",
    "feature-based"
  ],
  "author": "",
  "license": "MIT",
  "homepage": "https://github.com/yourusername/create-react-scaffold#readme",
  "repository": {
    "type": "git",
    "url": "https://github.com/sumitkumar105/React-scaffold-template.git"
  },
  "bugs": {
    "url": "https://github.com/yourusername/create-react-scaffold/issues"
  },
  "dependencies": {
    "chalk": "^5.3.0",
    "commander": "^12.0.0",
    "fs-extra": "^11.2.0",
    "glob": "^10.3.10",
    "inquirer": "^9.2.15",
    "ora": "^8.0.0",
    "simple-git": "^3.22.0"
  },
  "devDependencies": {
    "@types/fs-extra": "^11.0.4",
    "@types/inquirer": "^9.0.7",
    "@types/node": "^20.11.19",
    "tsx": "^4.7.1",
    "typescript": "^5.4.2"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
